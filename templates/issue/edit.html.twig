{% extends 'base.html.twig' %}

{% block title %}Ticket #{{ issue.id }}{% endblock %}

{% block body %}
    <style>
    </style>

    <div class="container">
        {{ form_start(issueForm) }}
        <h1 class="p-3 text-center">Ticket #{{ issue.id }}</h1>

        <div class="p-3">

            <div class="d-flex justify-content-between">
                <div class="d-flex align-items-center">
                    <div>Statut&nbsp:&nbsp</div>
                    <div>{{ form_widget(issueForm.status) }}</div>
                </div>
                <div class="d-flex align-items-center">
                    <div>Priorité&nbsp:&nbsp</div>
                    <div>{{ form_widget(issueForm.priority) }}</div>
                </div>
            </div>
            <div class="row col-12 mt-2">
                <div class="col-3">Titre :</div>
                <div class="col-9">{{ form_widget(issueForm.title) }}</div>
            </div>
            <div class="row col-12 mt-2">
                <div class="col-3">Description :</div>
                <div class="col-9">{{ form_widget(issueForm.description) }}</div>
            </div>
            <div class="row col-12 mt-2">
                <div class="col-3">Auteur :</div>
                <div class="col-9">{{ issue.author.firstName }}</div>
            </div>
            {% if issue.comments[0] is defined %}
            <div class="row col-12 mt-4">
                <div class="col-3">Commentaires :</div>
                <div class="col-9">
                    {% for comment in issue.comments %}
                        <div><b><u>{{ comment.author.firstName }}</u></b> : {{ comment.content }}</div>
                    {% endfor %}
                </div>
            </div>
            {% endif %}
            <div class="d-flex justify-content-around mt-5">
                <div class="d-flex justify-content-center">
                    <a href="/" class="btn btn-danger">Revenir à la liste</a>
                </div>
                <button class="btn btn-primary">Enregistrer</button>
            </div>
            {{ form_end(issueForm) }}
        </div>


    </div>
{% endblock %}
